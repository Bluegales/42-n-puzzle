{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "g++ build & run active file",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/solver/n-puzzle",
		"args": ["${workspaceFolder}/files/gen.txt"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false, //set to true to see output in cmd instead
		"MIMode": "lldb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
	  }
	  ]
  }